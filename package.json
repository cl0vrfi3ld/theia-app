{
  "name": "theia-downloader",
  "description": "A cool little youtube downloader",
  "author": {
    "name": "Cl0vr",
    "url": "https://cl0vr.co/"
  },
  "version": "0.0.2",
  "private": true,
  "main": "src/background/main.js",
  "homepage": "https://theia.rocks",
  "scripts": {
    "build-js": "NODE_ENV=production rollup -c",
    "pack": "yarn build-js && electron-builder --dir",
    "dist": " yarn build-js && electron-builder",
    "dev": "rollup -c -w",
    "start": "NODE_ENV=development electron .",
    "check": "svelte-check --tsconfig ./tsconfig.json",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "productName": "Theia",
    "appId": "rocks.theia.client",
    "copyright": "Copyright Â© 2020 Cl0vr",
    "mac": {
      "category": "public.app-category.music",
      "target": "dmg"
    },
    "win": {
      "target": "nsis",
      "artifactName": "${productName} Installer v${version}.${ext}"
    },
    "dmg": {
      "title": "Install Theia",
      "window": {
        "width": 540,
        "height": 380
      },
      "contents": [
        {
          "x": 110,
          "y": 190
        },
        {
          "x": 430,
          "y": 190,
          "type": "link",
          "path": "/Applications"
        }
      ]
    }
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^17.0.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^11.0.0",
    "@rollup/plugin-typescript": "^8.0.0",
    "@tsconfig/svelte": "^2.0.0",
    "autoprefixer": "^10.4.0",
    "dotenv": "^10.0.0",
    "electron": "^16.0.7",
    "electron-builder": "^22.14.5",
    "inquirer": "^8.2.0",
    "node-fetch": "^3.1.0",
    "postcss": "^8",
    "postcss-load-config": "^3.1.0",
    "postcss-nesting": "7",
    "postcss-sass": "^0.5.0",
    "postcss-scss": "^4.0.2",
    "prettier": "^2.5.1",
    "prettier-plugin-svelte": "^2.5.1",
    "rollup": "^2.3.4",
    "rollup-plugin-css-only": "^3.1.0",
    "rollup-plugin-livereload": "^2.0.0",
    "rollup-plugin-postcss": "^4.0.2",
    "rollup-plugin-sass": "^1.2.10",
    "rollup-plugin-svelte": "^7.0.0",
    "rollup-plugin-terser": "^7.0.0",
    "svelte": "^3.0.0",
    "svelte-check": "^2.0.0",
    "svelte-preprocess": "^4.9.8",
    "tailwindcss": "^3.0.1",
    "tslib": "^2.0.0",
    "typescript": "^4.0.0"
  },
  "dependencies": {
    "@types/musickit-js": "^1.0.1",
    "electron-log": "^4.4.5",
    "electron-store": "^8.0.1",
    "ffmpeg-static": "^4.4.0",
    "ffprobe-static": "^3.0.0",
    "fluent-ffmpeg": "^2.1.2",
    "gun": "^0.2020.1235",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.21",
    "node-sass": "^7.0.0",
    "sass": "^1.45.0",
    "sirv-cli": "^1.0.0",
    "svelte-spa-router": "^3.2.0",
    "ytcog": "^2.2.1",
    "ytdl-core": "^4.9.1"
  }
}
